<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/tab_fragment_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#009688">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="16">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CGPI-Percentage"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:background="#009688"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:layout_weight="0.5"
            android:background="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#fff">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CGPI               "
                android:layout_weight="4"
                android:enabled="true"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|number"
                android:hint="CGPI"
                android:layout_weight="3"
                android:id="@+id/tab2_cgpi"
                android:theme="@style/MyEditTextTheme"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="="
                android:background="#fff"
                android:textColor="#000"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="0"
                android:background="#fff"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tab2_percent"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|number"
                android:layout_weight="2"
                android:text="%"
                android:enabled="false"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="#fff"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#fff">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Percentage"
                android:layout_weight="4"
                android:enabled="true"
                android:background="@android:color/transparent"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|number"
                android:hint="%"
                android:id="@+id/tab2_percent1"
                android:layout_weight="3"
                android:theme="@style/MyEditTextTheme"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="="
                android:background="#fff"
                android:textColor="#000"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="0.0"
                android:background="#fff"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tab2_cgpi1"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal|number"
                android:layout_weight="2"
                android:enabled="false"
                android:text="CGPI"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="#fff"
                />
        </LinearLayout>
            <TextView
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="**DISCLAIMER**\nAs per Mumbai University,\n%=7.1*CGPI+12; if CGPI is less than 7\n\n%=7.4*CGPI+12; if CGPI>=7\nThe percentage can be rounded to the next full integer"
                android:id="@+id/formula"
                android:background="#004D40"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
              />

        <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

    </LinearLayout>
</LinearLayout>